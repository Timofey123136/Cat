    <script>
        // –≠–ª–µ–º–µ–Ω—Ç—ã –∏–≥—Ä—ã
        const canvas = document.getElementById('gameCanvas');
        const ctx = canvas.getContext('2d');
        const startBtn = document.getElementById('startBtn');
        const pauseBtn = document.getElementById('pauseBtn');
        const restartBtn = document.getElementById('restartBtn');
        const muteBtn = document.getElementById('muteBtn');
        const gameOverScreen = document.getElementById('gameOverScreen');
        const livesElement = document.getElementById('lives');
        const scoreElement = document.getElementById('score');
        const levelElement = document.getElementById('level');
        const ammoElement = document.getElementById('ammo');
        const finalScoreElement = document.getElementById('finalScore');
        
        // –ò–≥—Ä–æ–≤—ã–µ –ø–µ—Ä–µ–º–µ–Ω–Ω—ã–µ
        let gameRunning = false;
        let gamePaused = false;
        let muted = false;
        let score = 0;
        let lives = 3;
        let level = 1;
        let ammo = 100;
        let animationId;
        let lastTime = 0;
        
        // –ó–≤—É–∫–æ–≤—ã–µ —ç—Ñ—Ñ–µ–∫—Ç—ã
        const sounds = {
            shoot: new Audio('data:audio/wav;base64,UklGRigAAABXQVZFZm10IBIAAAABAAEAQB8AAEAfAAABAAgAZGF0YQ'),
            explosion: new Audio('data:audio/wav;base64,UklGRigAAABXQVZFZm10IBIAAAABAAEAQB8AAEAfAAABAAgAZGF0YQ'),
            bonus: new Audio('data:audio/wav;base64,UklGRigAAABXQVZFZm10IBIAAAABAAEAQB8AAEAfAAABAAgAZGF0YQ'),
            hit: new Audio('data:audio/wav;base64,UklGRigAAABXQVZFZm10IBIAAAABAAEAQB8AAEAfAAABAAgAZGF0YQ')
        };
        
        // –°–æ–∑–¥–∞–µ–º –ø—Ä–æ—Å—Ç—ã–µ –∑–≤—É–∫–∏ (–≤ —Ä–µ–∞–ª—å–Ω–æ–π –∏–≥—Ä–µ –∑–¥–µ—Å—å –±—ã–ª–∏ –±—ã –Ω–∞—Å—Ç–æ—è—â–∏–µ –∑–≤—É–∫–æ–≤—ã–µ —Ñ–∞–π–ª—ã)
        function initSounds() {
            // –ó–∞–≥–ª—É—à–∫–∞ –¥–ª—è –∑–≤—É–∫–æ–≤, —Ç–∞–∫ –∫–∞–∫ –º—ã –Ω–µ –∏—Å–ø–æ–ª—å–∑—É–µ–º —Ä–µ–∞–ª—å–Ω—ã–µ —Ñ–∞–π–ª—ã
            // –í —Ä–µ–∞–ª—å–Ω–æ–π –∏–≥—Ä–µ –∑–¥–µ—Å—å –±—ã–ª–∞ –±—ã –∑–∞–≥—Ä—É–∑–∫–∞ –∑–≤—É–∫–æ–≤—ã—Ö —Ñ–∞–π–ª–æ–≤
        }
        
        // –ò–≥—Ä–æ–≤—ã–µ –æ–±—ä–µ–∫—Ç—ã
        const cat = {
            x: canvas.width / 2,
            y: canvas.height - 100,
            width: 100,
            height: 80,
            angle: 0,
            draw() {
                // –¢–µ–ª–æ –∫–æ—Ç–∞
                ctx.save();
                ctx.translate(this.x, this.y);
                ctx.rotate(this.angle);
                
                // –¢–µ–ª–æ –∫–æ—Ç–∞
                ctx.fillStyle = '#FFA726';
                ctx.beginPath();
                ctx.ellipse(0, 0, this.width/2, this.height/2, 0, 0, Math.PI * 2);
                ctx.fill();
                
                // –£—à–∏ –∫–æ—Ç–∞
                ctx.fillStyle = '#FFA726';
                ctx.beginPath();
                ctx.moveTo(-25, -35);
                ctx.lineTo(-40, -60);
                ctx.lineTo(-10, -45);
                ctx.fill();
                
                ctx.beginPath();
                ctx.moveTo(25, -35);
                ctx.lineTo(40, -60);
                ctx.lineTo(10, -45);
                ctx.fill();
                
                // –ì–ª–∞–∑–∞ –∫–æ—Ç–∞
                ctx.fillStyle = '#1E88E5';
                ctx.beginPath();
                ctx.arc(-20, -10, 8, 0, Math.PI * 2);
                ctx.fill();
                
                ctx.beginPath();
                ctx.arc(20, -10, 8, 0, Math.PI * 2);
                ctx.fill();
                
                // –ó—Ä–∞—á–∫–∏
                ctx.fillStyle = '#000';
                ctx.beginPath();
                ctx.arc(-20, -10, 3, 0, Math.PI * 2);
                ctx.fill();
                
                ctx.beginPath();
                ctx.arc(20, -10, 3, 0, Math.PI * 2);
                ctx.fill();
                
                // –ù–æ—Å
                ctx.fillStyle = '#E91E63';
                ctx.beginPath();
                ctx.arc(0, 5, 5, 0, Math.PI * 2);
                ctx.fill();
                
                // –£—Å—ã
                ctx.strokeStyle = '#FFF';
                ctx.lineWidth = 2;
                
                // –õ–µ–≤—ã–µ —É—Å—ã
                ctx.beginPath();
                ctx.moveTo(-5, 5);
                ctx.lineTo(-35, 0);
                ctx.stroke();
                
                ctx.beginPath();
                ctx.moveTo(-5, 10);
                ctx.lineTo(-35, 10);
                ctx.stroke();
                
                ctx.beginPath();
                ctx.moveTo(-5, 15);
                ctx.lineTo(-35, 20);
                ctx.stroke();
                
                // –ü—Ä–∞–≤—ã–µ —É—Å—ã
                ctx.beginPath();
                ctx.moveTo(5, 5);
                ctx.lineTo(35, 0);
                ctx.stroke();
                
                ctx.beginPath();
                ctx.moveTo(5, 10);
                ctx.lineTo(35, 10);
                ctx.stroke();
                
                ctx.beginPath();
                ctx.moveTo(5, 15);
                ctx.lineTo(35, 20);
                ctx.stroke();
                
                // –ü—É–ª–µ–º–µ—Ç
                ctx.fillStyle = '#795548';
                ctx.fillRect(0, 10, 60, 15);
                ctx.fillRect(50, 5, 10, 25);
                
                ctx.restore();
            },
            update(mouseX, mouseY) {
                // –û–±–Ω–æ–≤–ª—è–µ–º —É–≥–æ–ª –ø–æ–≤–æ—Ä–æ—Ç–∞ –∫–æ—Ç–∞ –≤ —Å—Ç–æ—Ä–æ–Ω—É –º—ã—à–∏
                const dx = mouseX - this.x;
                const dy = mouseY - this.y;
                this.angle = Math.atan2(dy, dx);
            }
        };
        
        // –ú–∞—Å—Å–∏–≤—ã –¥–ª—è –ø—É–ª—å, —Ä—ã–± –∏ –±–æ–Ω—É—Å–æ–≤
        let bullets = [];
        let fish = [];
        let bonuses = [];
        let explosions = [];
        
        // –ö–ª–∞—Å—Å –ø—É–ª–∏
        class Bullet {
            constructor(x, y, angle) {
                this.x = x;
                this.y = y;
                this.speed = 12;
                this.radius = 5;
                this.dx = Math.cos(angle) * this.speed;
                this.dy = Math.sin(angle) * this.speed;
                this.color = '#FFEB3B';
            }
            
            update() {
                this.x += this.dx;
                this.y += this.dy;
            }
            
            draw() {
                ctx.fillStyle = this.color;
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
                ctx.fill();
                
                // –≠—Ñ—Ñ–µ–∫—Ç –ø–ª–∞–º–µ–Ω–∏ –æ—Ç –≤—ã—Å—Ç—Ä–µ–ª–∞
                ctx.fillStyle = '#FF9800';
                ctx.beginPath();
                ctx.arc(this.x - this.dx/2, this.y - this.dy/2, this.radius * 0.7, 0, Math.PI * 2);
                ctx.fill();
            }
            
            isOutOfBounds() {
                return this.x < 0 || this.x > canvas.width || this.y < 0 || this.y > canvas.height;
            }
        }
        
        // –ö–ª–∞—Å—Å —Ä—ã–±—ã
        class Fish {
            constructor() {
                this.radius = 20 + Math.random() * 15;
                this.speed = 1 + Math.random() * 2 + level * 0.2;
                
                // –†—ã–±–∞ –ø–æ—è–≤–ª—è–µ—Ç—Å—è —Å –æ–¥–Ω–æ–π –∏–∑ —Å—Ç–æ—Ä–æ–Ω —ç–∫—Ä–∞–Ω–∞
                if (Math.random() > 0.5) {
                    this.x = Math.random() > 0.5 ? -this.radius : canvas.width + this.radius;
                    this.y = Math.random() * canvas.height;
                } else {
                    this.x = Math.random() * canvas.width;
                    this.y = -this.radius;
                }
                
                // –ù–∞–ø—Ä–∞–≤–ª–µ–Ω–∏–µ –¥–≤–∏–∂–µ–Ω–∏—è –∫ –∫–æ—Ç—É
                const dx = cat.x - this.x;
                const dy = cat.y - this.y;
                const distance = Math.sqrt(dx * dx + dy * dy);
                this.dx = dx / distance * this.speed;
                this.dy = dy / distance * this.speed;
                
                // –¶–≤–µ—Ç —Ä—ã–±—ã
                this.color = `hsl(${Math.random() * 60 + 180}, 80%, 50%)`;
                
                // –ê–Ω–∏–º–∞—Ü–∏—è –ø–ª–∞–≤–Ω–∏–∫–æ–≤
                this.finAngle = 0;
                this.finSpeed = 0.1 + Math.random() * 0.1;
            }
            
            update() {
                this.x += this.dx;
                this.y += this.dy;
                
                // –ê–Ω–∏–º–∞—Ü–∏—è –ø–ª–∞–≤–Ω–∏–∫–æ–≤
                this.finAngle += this.finSpeed;
            }
            
            draw() {
                ctx.save();
                ctx.translate(this.x, this.y);
                
                // –¢–µ–ª–æ —Ä—ã–±—ã
                ctx.fillStyle = this.color;
                ctx.beginPath();
                ctx.ellipse(0, 0, this.radius, this.radius/1.5, 0, 0, Math.PI * 2);
                ctx.fill();
                
                // –•–≤–æ—Å—Ç
                ctx.fillStyle = this.color;
                ctx.beginPath();
                ctx.moveTo(-this.radius, 0);
                ctx.lineTo(-this.radius - 15, -this.radius/2);
                ctx.lineTo(-this.radius - 15, this.radius/2);
                ctx.closePath();
                ctx.fill();
                
                // –ü–ª–∞–≤–Ω–∏–∫
                ctx.fillStyle = `hsl(${Math.random() * 60 + 180}, 90%, 60%)`;
                ctx.beginPath();
                ctx.ellipse(0, -this.radius/1.5, this.radius/2, this.radius/4, Math.sin(this.finAngle) * 0.5, 0, Math.PI * 2);
                ctx.fill();
                
                // –ì–ª–∞–∑
                ctx.fillStyle = '#000';
                ctx.beginPath();
                ctx.arc(this.radius/2, -this.radius/4, 3, 0, Math.PI * 2);
                ctx.fill();
                
                ctx.restore();
            }
            
            isOutOfBounds() {
                return this.x < -50 || this.x > canvas.width + 50 || this.y < -50 || this.y > canvas.height + 50;
            }
        }
        
        // –ö–ª–∞—Å—Å –±–æ–Ω—É—Å–∞
        class Bonus {
            constructor(x, y) {
                this.x = x;
                this.y = y;
                this.radius = 15;
                this.type = Math.floor(Math.random() * 3); // 0 - –ø–∞—Ç—Ä–æ–Ω—ã, 1 - –∂–∏–∑–Ω–∏, 2 - –æ—á–∫–∏
                this.colors = ['#4CAF50', '#F44336', '#FFC107'];
                this.symbols = ['üîã', '‚ù§Ô∏è', '‚≠ê'];
                this.speed = 2;
                this.dy = this.speed;
            }
            
            update() {
                this.y += this.dy;
            }
            
            draw() {
                ctx.save();
                ctx.translate(this.x, this.y);
                
                // –í–Ω–µ—à–Ω–∏–π –∫—Ä—É–≥
                ctx.fillStyle = this.colors[this.type];
                ctx.beginPath();
                ctx.arc(0, 0, this.radius, 0, Math.PI * 2);
                ctx.fill();
                
                // –í–Ω—É—Ç—Ä–µ–Ω–Ω–∏–π –∫—Ä—É–≥
                ctx.fillStyle = '#FFF';
                ctx.beginPath();
                ctx.arc(0, 0, this.radius * 0.7, 0, Math.PI * 2);
                ctx.fill();
                
                // –°–∏–º–≤–æ–ª –±–æ–Ω—É—Å–∞
                ctx.font = `${this.radius * 1.2}px Arial`;
                ctx.textAlign = 'center';
                ctx.textBaseline = 'middle';
                ctx.fillStyle = this.colors[this.type];
                ctx.fillText(this.symbols[this.type], 0, 0);
                
                ctx.restore();
            }
            
            isOutOfBounds() {
                return this.y > canvas.height + this.radius;
            }
        }
        
        // –ö–ª–∞—Å—Å –≤–∑—Ä—ã–≤–∞
        class Explosion {
            constructor(x, y) {
                this.x = x;
                this.y = y;
                this.radius = 5;
                this.maxRadius = 30;
                this.growthSpeed = 2;
                this.alpha = 1;
                this.fadeSpeed = 0.05;
            }
            
            update() {
                this.radius += this.growthSpeed;
                this.alpha -= this.fadeSpeed;
                
                return this.alpha > 0;
            }
            
            draw() {
                ctx.save();
                ctx.globalAlpha = this.alpha;
                
                // –í–∑—Ä—ã–≤
                ctx.fillStyle = '#FF9800';
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.radius, 0, Math.PI * 2);
                ctx.fill();
                
                // –í–Ω—É—Ç—Ä–µ–Ω–Ω–∏–π –≤–∑—Ä—ã–≤
                ctx.fillStyle = '#FFEB3B';
                ctx.beginPath();
                ctx.arc(this.x, this.y, this.radius * 0.7, 0, Math.PI * 2);
                ctx.fill();
                
                ctx.restore();
            }
        }
        
        // –ò–Ω–∏—Ü–∏–∞–ª–∏–∑–∞—Ü–∏—è –∏–≥—Ä—ã
        function initGame() {
            score = 0;
            lives = 3;
            level = 1;
            ammo = 100;
            
            bullets = [];
            fish = [];
            bonuses = [];
            explosions = [];
            
            updateUI();
            gameOverScreen.style.display = 'none';
        }
        
        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–Ω—Ç–µ—Ä—Ñ–µ–π—Å–∞
        function updateUI() {
            livesElement.textContent = lives;
            scoreElement.textContent = score;
            levelElement.textContent = level;
            ammoElement.textContent = ammo;
        }
        
        // –û–±—Ä–∞–±–æ—Ç–∫–∞ –≤—ã—Å—Ç—Ä–µ–ª–∞
        function shoot(mouseX, mouseY) {
            if (ammo <= 0 || !gameRunning || gamePaused) return;
            
            // –°–æ–∑–¥–∞–Ω–∏–µ –ø—É–ª–∏
            const angle = Math.atan2(mouseY - cat.y, mouseX - cat.x);
            bullets.push(new Bullet(cat.x, cat.y, angle));
            
            // –†–∞—Å—Ö–æ–¥ –ø–∞—Ç—Ä–æ–Ω–æ–≤
            ammo--;
            updateUI();
            
            // –ó–≤—É–∫ –≤—ã—Å—Ç—Ä–µ–ª–∞
            if (!muted) {
                playSound('shoot');
            }
        }
        
        // –í–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω–∏–µ –∑–≤—É–∫–∞
        function playSound(soundName) {
            if (sounds[soundName]) {
                sounds[soundName].currentTime = 0;
                sounds[soundName].play().catch(e => console.log("–ó–≤—É–∫ –Ω–µ –º–æ–∂–µ—Ç –±—ã—Ç—å –≤–æ—Å–ø—Ä–æ–∏–∑–≤–µ–¥–µ–Ω:", e));
            }
        }
        
        // –°–æ–∑–¥–∞–Ω–∏–µ —Ä—ã–±
        function spawnFish() {
            // –ö–æ–ª–∏—á–µ—Å—Ç–≤–æ —Ä—ã–± –∑–∞–≤–∏—Å–∏—Ç –æ—Ç —É—Ä–æ–≤–Ω—è
            const maxFish = 5 + level * 2;
            
            if (fish.length < maxFish && Math.random() < 0.05) {
                fish.push(new Fish());
            }
        }
        
        // –°–æ–∑–¥–∞–Ω–∏–µ –±–æ–Ω—É—Å–æ–≤
        function spawnBonus(x, y) {
            if (Math.random() < 0.3) { // 30% —à–∞–Ω—Å –ø–æ—è–≤–ª–µ–Ω–∏—è –±–æ–Ω—É—Å–∞
                bonuses.push(new Bonus(x, y));
            }
        }
        
        // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏–π
        function checkCollisions() {
            // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏–π –ø—É–ª—å —Å —Ä—ã–±–∞–º–∏
            for (let i = bullets.length - 1; i >= 0; i--) {
                for (let j = fish.length - 1; j >= 0; j--) {
                    const dx = bullets[i].x - fish[j].x;
                    const dy = bullets[i].y - fish[j].y;
                    const distance = Math.sqrt(dx * dx + dy * dy);
                    
                    if (distance < bullets[i].radius + fish[j].radius) {
                        // –£–Ω–∏—á—Ç–æ–∂–µ–Ω–∏–µ —Ä—ã–±—ã
                        explosions.push(new Explosion(fish[j].x, fish[j].y));
                        spawnBonus(fish[j].x, fish[j].y);
                        fish.splice(j, 1);
                        bullets.splice(i, 1);
                        
                        // –£–≤–µ–ª–∏—á–µ–Ω–∏–µ —Å—á–µ—Ç–∞
                        score += 10 * level;
                        
                        // –ü—Ä–æ–≤–µ—Ä–∫–∞ —É—Ä–æ–≤–Ω—è
                        if (score >= level * 500) {
                            level++;
                        }
                        
                        updateUI();
                        
                        // –ó–≤—É–∫ –≤–∑—Ä—ã–≤–∞
                        if (!muted) {
                            playSound('explosion');
                        }
                        
                        break;
                    }
                }
            }
            
            // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏–π –∫–æ—Ç–∞ —Å —Ä—ã–±–∞–º–∏
            for (let i = fish.length - 1; i >= 0; i--) {
                const dx = cat.x - fish[i].x;
                const dy = cat.y - fish[i].y;
                const distance = Math.sqrt(dx * dx + dy * dy);
                
                if (distance < cat.width/2 + fish[i].radius) {
                    // –ö–æ—Ç –ø–æ–ª—É—á–∞–µ—Ç —É—Ä–æ–Ω
                    explosions.push(new Explosion(fish[i].x, fish[i].y));
                    fish.splice(i, 1);
                    lives--;
                    updateUI();
                    
                    // –ó–≤—É–∫ –ø–æ–ø–∞–¥–∞–Ω–∏—è
                    if (!muted) {
                        playSound('hit');
                    }
                    
                    // –ü—Ä–æ–≤–µ—Ä–∫–∞ –∫–æ–Ω—Ü–∞ –∏–≥—Ä—ã
                    if (lives <= 0) {
                        endGame();
                    }
                }
            }
            
            // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏–π –∫–æ—Ç–∞ —Å –±–æ–Ω—É—Å–∞–º–∏
            for (let i = bonuses.length - 1; i >= 0; i--) {
                const dx = cat.x - bonuses[i].x;
                const dy = cat.y - bonuses[i].y;
                const distance = Math.sqrt(dx * dx + dy * dy);
                
                if (distance < cat.width/2 + bonuses[i].radius) {
                    // –ê–∫—Ç–∏–≤–∞—Ü–∏—è –±–æ–Ω—É—Å–∞
                    const bonus = bonuses[i];
                    
                    switch(bonus.type) {
                        case 0: // –ü–∞—Ç—Ä–æ–Ω—ã
                            ammo += 30;
                            break;
                        case 1: // –ñ–∏–∑–Ω–∏
                            lives = Math.min(lives + 1, 5);
                            break;
                        case 2: // –û—á–∫–∏
                            score += 100;
                            break;
                    }
                    
                    bonuses.splice(i, 1);
                    updateUI();
                    
                    // –ó–≤—É–∫ –±–æ–Ω—É—Å–∞
                    if (!muted) {
                        playSound('bonus');
                    }
                }
            }
        }
        
        // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –∏–≥—Ä—ã
        function updateGame() {
            // –£–¥–∞–ª–µ–Ω–∏–µ –≤—ã—à–µ–¥—à–∏—Ö –∑–∞ –≥—Ä–∞–Ω–∏—Ü—ã –ø—É–ª—å
            bullets = bullets.filter(bullet => !bullet.isOutOfBounds());
            
            // –£–¥–∞–ª–µ–Ω–∏–µ –≤—ã—à–µ–¥—à–∏—Ö –∑–∞ –≥—Ä–∞–Ω–∏—Ü—ã —Ä—ã–±
            fish = fish.filter(fish => !fish.isOutOfBounds());
            
            // –£–¥–∞–ª–µ–Ω–∏–µ –≤—ã—à–µ–¥—à–∏—Ö –∑–∞ –≥—Ä–∞–Ω–∏—Ü—ã –±–æ–Ω—É—Å–æ–≤
            bonuses = bonuses.filter(bonus => !bonus.isOutOfBounds());
            
            // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –≤–∑—Ä—ã–≤–æ–≤
            explosions = explosions.filter(explosion => explosion.update());
            
            // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –ø—É–ª—å
            bullets.forEach(bullet => bullet.update());
            
            // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ —Ä—ã–±
            fish.forEach(fish => fish.update());
            
            // –û–±–Ω–æ–≤–ª–µ–Ω–∏–µ –±–æ–Ω—É—Å–æ–≤
            bonuses.forEach(bonus => bonus.update());
            
            // –°–æ–∑–¥–∞–Ω–∏–µ –Ω–æ–≤—ã—Ö —Ä—ã–±
            spawnFish();
            
            // –ü—Ä–æ–≤–µ—Ä–∫–∞ —Å—Ç–æ–ª–∫–Ω–æ–≤–µ–Ω–∏–π
            checkCollisions();
        }
        
        // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ –∏–≥—Ä—ã
        function drawGame() {
            // –û—á–∏—Å—Ç–∫–∞ —Ö–æ–ª—Å—Ç–∞
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // –§–æ–Ω —Å –≤–æ–¥–Ω—ã–º–∏ –≤–æ–ª–Ω–∞–º–∏
            drawBackground();
            
            // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ –±–æ–Ω—É—Å–æ–≤
            bonuses.forEach(bonus => bonus.draw());
            
            // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ –≤–∑—Ä—ã–≤–æ–≤
            explosions.forEach(explosion => explosion.draw());
            
            // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ –ø—É–ª—å
            bullets.forEach(bullet => bullet.draw());
            
            // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ —Ä—ã–±
            fish.forEach(fish => fish.draw());
            
            // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ –∫–æ—Ç–∞
            cat.draw();
            
            // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ –∏–Ω—Ñ–æ—Ä–º–∞—Ü–∏–∏ –æ –ø–∞—É–∑–µ
            if (gamePaused) {
                ctx.fillStyle = 'rgba(0, 0, 0, 0.7)';
                ctx.fillRect(0, 0, canvas.width, canvas.height);
                
                ctx.font = '60px Arial';
                ctx.fillStyle = '#FF9800';
                ctx.textAlign = 'center';
                ctx.textBaseline = 'middle';
                ctx.fillText('–ü–ê–£–ó–ê', canvas.width / 2, canvas.height / 2);
            }
        }
        
        // –û—Ç—Ä–∏—Å–æ–≤–∫–∞ —Ñ–æ–Ω–∞
        function drawBackground() {
            // –ì—Ä–∞–¥–∏–µ–Ω—Ç–Ω–æ–µ –Ω–µ–±–æ
            const gradient = ctx.createLinearGradient(0, 0, 0, canvas.height);
            gradient.addColorStop(0, '#1a2980');
            gradient.addColorStop(1, '#26d0ce');
            ctx.fillStyle = gradient;
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            // –í–æ–ª–Ω—ã
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.1)';
            ctx.lineWidth = 2;
            
            for (let i = 0; i < 5; i++) {
                ctx.beginPath();
                const y = canvas.height - 50 + i * 15;
                for (let x = 0; x < canvas.width; x += 10) {
                    const waveHeight = Math.sin(x * 0.02 + Date.now() * 0.001 + i) * 5;
                    ctx.lineTo(x, y + waveHeight);
                }
                ctx.stroke();
            }
            
            // –ü—É–∑—ã—Ä–∏
            ctx.fillStyle = 'rgba(255, 255, 255, 0.2)';
            for (let i = 0; i < 10; i++) {
                const x = (Date.now() * 0.05 + i * 100) % canvas.width;
                const y = (canvas.height - 100 + Math.sin(Date.now() * 0.001 + i) * 20) % canvas.height;
                const radius = 2 + Math.sin(Date.now() * 0.001 + i) * 2;
                
                ctx.beginPath();
                ctx.arc(x, y, radius, 0, Math.PI * 2);
                ctx.fill();
            }
        }
        
        // –û—Å–Ω–æ–≤–Ω–æ–π –∏–≥—Ä–æ–≤–æ–π —Ü–∏–∫–ª
        function gameLoop(timestamp) {
            if (!gameRunning) return;
            
            const deltaTime = timestamp - lastTime;
            lastTime = timestamp;
            
            if (!gamePaused) {
                updateGame();
            }
            
            drawGame();
            
            animationId = requestAnimationFrame(gameLoop);
        }
        
        // –ó–∞–≤–µ—Ä—à–µ–Ω–∏–µ –∏–≥—Ä—ã
        function endGame() {
            gameRunning = false;
            finalScoreElement.textContent = score;
            gameOverScreen.style.display = 'block';
            cancelAnimationFrame(animationId);
        }
        
        // –û–±—Ä–∞–±–æ—Ç—á–∏–∫–∏ —Å–æ–±—ã—Ç–∏–π
        canvas.addEventListener('mousemove', (e) => {
            const rect = canvas.getBoundingClientRect();
            const mouseX = e.clientX - rect.left;
            const mouseY = e.clientY - rect.top;
            
            cat.update(mouseX, mouseY);
        });
        
        canvas.addEventListener('click', (e) => {
            if (!gameRunning || gamePaused) return;
            
            const rect = canvas.getBoundingClientRect();
            const mouseX = e.clientX - rect.left;
            const mouseY = e.clientY - rect.top;
            
            shoot(mouseX, mouseY);
        });
        
        startBtn.addEventListener('click', () => {
            if (!gameRunning) {
                initGame();
                gameRunning = true;
                gamePaused = false;
                lastTime = performance.now();
                animationId = requestAnimationFrame(gameLoop);
                startBtn.textContent = '–†–ï–°–¢–ê–†–¢';
            } else {
                initGame();
            }
        });
        
        pauseBtn.addEventListener('click', () => {
            if (!gameRunning) return;
            
            gamePaused = !gamePaused;
            pauseBtn.textContent = gamePaused ? '–ü–†–û–î–û–õ–ñ–ò–¢–¨' : '–ü–ê–£–ó–ê';
        });
        
        restartBtn.addEventListener('click', () => {
            initGame();
            gameRunning = true;
            gamePaused = false;
            gameOverScreen.style.display = 'none';
            lastTime = performance.now();
            animationId = requestAnimationFrame(gameLoop);
            startBtn.textContent = '–†–ï–°–¢–ê–†–¢';
            pauseBtn.textContent = '–ü–ê–£–ó–ê';
        });
        
        muteBtn.addEventListener('click', () => {
            muted = !muted;
            muteBtn.textContent = muted ? '–í–ö–õ –ó–í–£–ö' : '–í–´–ö–õ –ó–í–£–ö';
        });
        
        // –ó–∞–ø—É—Å–∫ –∏–≥—Ä—ã –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ —Å—Ç—Ä–∞–Ω–∏—Ü—ã
        window.addEventListener('load', () => {
            initSounds();
            cat.draw();
        });
    </script>
</body>
</html>
